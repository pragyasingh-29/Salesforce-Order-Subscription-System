<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Prevent_Completion_Without_Paid_Invoices</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISPICKVAL( Status__c , &quot;Completed&quot;),
      Paid_Invoice_Count__c  = 0
    )</errorConditionFormula>
    <errorMessage>An Order cannot be completed without at least one paid Invoice.</errorMessage>
</ValidationRule>
