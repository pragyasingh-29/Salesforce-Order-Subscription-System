<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Prevent_Invoice_For_Draft_Order</fullName>
    <active>true</active>
    <errorConditionFormula>ISPICKVAL( Order__r.Status__c   , &quot;Draft&quot;)</errorConditionFormula>
